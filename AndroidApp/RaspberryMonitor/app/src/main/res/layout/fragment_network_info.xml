<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Network.FragmentNetworkInfo">

    <TextView
        android:id="@+id/totalBytesSentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bytes Sent: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/totalBytesRecvTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bytes Received: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/interfacesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Interfaces:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/interfacesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
